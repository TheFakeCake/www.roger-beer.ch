{% extends 'base.html.twig' %}

{% block body %}
    {% include 'layout/header.html.twig' %}
    {% block content %}{% endblock %}

    {# Footer #}
    <footer class="bg-dark text-light pb-1 {{ block('footer_content') is empty ? 'pt-2 pt-md-3' : 'pt-4 pt-sm-5' }}">
        <div class="container-md">
            {% block footer_content %}
                {% include 'layout/footer.html.twig' %}
            {% endblock %}
            {% if block('footer_content') is not empty %}
                <hr class="text-light">
            {% endif %}
            <div class="row fs-7 text-light text-center">
                <div class="mb-1 mb-md-0 col-md-6 text-md-start">
                    © Copyright Roger Beer - Séquoia & Gardens - {{ 'now'|date('Y') }}
                </div>
                <div class="col-md-6 text-md-end">
                    Réalisé par Benjamin Ganty
                </div>
            </div>
        </div>
    </footer>
{% endblock %}
