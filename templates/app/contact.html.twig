{% extends 'layout/layout.html.twig' %}

{% block page_title %}Contacter Roger Beer, ingénieur forestier EPFZ/SIA{% endblock %}
{% block page_description %}Envoyez un message à Roger Beer ou découvrez ses coordonnées de contact.{% endblock %}

{% form_theme form _self %}

{# Form label with added .form-label class and .required class (if needed) #}
{% block form_label -%}
    {%- set label_attr = label_attr|merge({
        class: (label_attr.class|default('') ~ ' form-label' ~ (required ? ' required'))|trim
    }) -%}

    <label for="{{ id }}"
        {%- for key, value in label_attr -%}
            {{- value is not empty ? (' ' ~ key ~ '="' ~ value ~ '"')|raw -}}
        {%- endfor -%}
    >
        {{- label -}}
    </label>
{%- endblock %}

{# Base text form widget with added .form-control class and aria-describedby
   attribute linked to form_errors (if needed) #}
{% block text_widget -%}
    {%- set form_errors_ids = '' -%}
    {%- for error in errors -%}
        {%- set form_errors_ids = form_errors_ids ~ ' error_' ~ loop.index0 ~ '_' ~ id -%}
    {%- endfor -%}
    {%- set attr = attr|merge({
        class: (attr.class|default('') ~ ' form-control')|trim,
        'aria-describedby': (attr['aria-describedby']|default('') ~ form_errors_ids ~ ' feedback_' ~ id)|trim
    }) -%}

    <input type="{{ type|default('text') }}" name="{{ full_name }}" id="{{ id }}"
        {%- for key, value in attr -%}
            {{- value is not empty ? (' ' ~ key ~ '="' ~ value ~ '"')|raw -}}
        {%- endfor -%}
        {{- data is not empty ? (' value="' ~ data|escape ~ '"')|raw }}
        {{- required ? ' required="required"' -}}
    >
{%- endblock %}

{# Email form widget. Same as text_widget but with type="email" #}
{% block email_widget -%}
    {%- set type = 'email' -%}
    {%- set attr = attr|merge({ pattern: '[a-zA-Z0-9.!#$%&\'*+\\\\/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)+' }) -%}
    {{- block('text_widget') -}}
{%- endblock %}

{# Tel form widget. Same as text_widget but with type="tel" #}
{% block tel_widget -%}
    {%- set type = 'tel' -%}
    {{- block('text_widget') -}}
{%- endblock %}

{# Textarea form widget with added .form-control class and aria-describedby
   attribute linked to form_errors (if needed) #}
{% block textarea_widget -%}
    {%- set form_errors_ids = '' -%}
    {%- for error in errors -%}
        {%- set form_errors_ids = form_errors_ids ~ ' error_' ~ loop.index0 ~ '_' ~ id -%}
    {%- endfor -%}
    {%- set attr = attr|merge({
        class: (attr.class|default('') ~ ' form-control')|trim,
        'aria-describedby': (attr['aria-describedby']|default('') ~ form_errors_ids ~ ' feedback_' ~ id)|trim
    }) -%}

    <textarea name="{{ full_name }}" id="{{ id }}"
        {%- for key, value in attr -%}
            {{- value is not empty ? (' ' ~ key ~ '="' ~ value ~ '"')|raw -}}
        {%- endfor -%}
        {{- required ? ' required="required"' -}}
    >
        {{- data -}}
    </textarea>
{%- endblock textarea_widget %}

{# Form errors #}
{% block form_errors -%}
    {% for error in errors -%}
        <div class="alert alert-danger">{{ error.message }}</div>
    {%- endfor %}
{%- endblock %}

{# Form row #}
{% block form_row -%}
    <div
        {%- for key, value in row_attr -%}
            {{- value is not empty ? (' ' ~ key ~ '="' ~ value ~ '"')|raw -}}
        {%- endfor -%}
    >
        {{- form_label(form) -}}
        {{- form_widget(form) -}}
        {%- if custom_feedback_message is defined -%}
            <div class="invalid-feedback" id="feedback_{{ id }}">{{ custom_feedback_message }}</div>
        {%- endif -%}
    </div>
{%- endblock %}

{% block content %}
    <div class="bg-phone-wood py-4 py-md-5 text-white">
        <section class="container-md">
            <h1 data-animation="fadeInUp">
                Faites-moi part de votre projet
            </h1>
            <p class="col-sm-10 col-md-6 fs-5 fst-italic" data-animation="fadeInUp">
                N'hésitez pas à me contacter pour demander un devis ou un rendez-vous.
            </p>
        </section>
    </div>
    <div class="bg-bark pt-4 py-md-5">
        <div class="container-md">
            <div class="row gy-4 gx-xxl-5">

                {# Form column #}
                {{ form_start(form, { action: path('contact'), attr: {
                    id: 'contactForm',
                    class: 'col-md-6' ~ (form.vars.submitted ? ' was-validated'),
                    novalidate: true,
                    'aria-label': 'Formulaire de contact',
                } }) }}
                    <h2 class="mb-3" data-animation="fadeInUp">Envoyez moi un message</h2>
                    {{ form_errors(form) }}
                    {%- for message in app.flashes('contactSuccess') %}
                        <div class="alert alert-success" role="alert">
                            {{- message -}}
                        </div>
                    {%- endfor %}
                    <div class="row gy-2 gy-sm-3">
                        {#- Honey pot #}
                        {{ form_widget(form.email_address, {
                            attr: { tabindex: '-1', autocomplete: 'off' }
                        }) }}
                        {{ form_row(form.firstName, {
                            row_attr: { class: 'col-sm-6' },
                            label: 'Prénom',
                            custom_feedback_message: 'Veuillez saisir votre prénom.',
                        }) }}
                        {{ form_row(form.lastName, {
                            row_attr: { class: 'col-sm-6' },
                            label: 'Nom',
                            custom_feedback_message: 'Veuillez saisir votre nom.',
                        }) }}
                        {{ form_row(form.email, {
                            row_attr: { class: 'col-sm-6 col-md-12 col-lg-6' },
                            label: 'Adresse e-mail',
                            custom_feedback_message: 'Veuillez saisir une adresse e-mail valide.',
                        }) }}
                        {{ form_row(form.phone, {
                            row_attr: { class: 'col-sm-6 col-md-12 col-lg-6' },
                            label: 'Téléphone',
                            custom_feedback_message: 'Veuillez saisir un numéro de téléphone valide.',
                        }) }}
                        {{ form_row(form.message, {
                            row_attr: { class: 'col-12' },
                            label: 'Message',
                            attr: { rows: 5 },
                            custom_feedback_message: 'Veuillez saisir votre message.',
                        }) }}
                        <div class="col-12 col-sm-6">
                            <input class="footer-contact-btn w-100" type="submit" role="button" value="Envoyer">
                        </div>
                    </div>
                {{ form_end(form) }}

                {# Contact info column #}
                <section class="col-md-6 contact-info-column" aria-labelledby="contactInfoLabel">
                    <h2 class="mb-3 text-md-center text-xxl-start" id="contactInfoLabel" data-animation="fadeInUp">Mes coordonnées</h2>

                    <div class="row justify-content-center gx-xl-0">
                        <div class="col-auto d-flex" aria-labelledby="contactAddressLabel">
                            <div class="contact-label" id="contactAddressLabel">Adresse</div>
                            <address class="contact-address text-nowrap">
                                {% block contact_address -%}
                                    <strong>Roger Beer</strong><br>
                                    Séquoia and Gardens<br>
                                    Chemin de la Creuse 5G<br>
                                    CH - 1261 Marchissy (VD)
                                {%- endblock %}
                            </address>
                        </div>
                        <div class="col-auto">
                            <div class="d-flex" aria-labelledby="contactPhoneLabel">
                                <div class="contact-label" id="contactPhoneLabel">Téléphone</div>
                                <address class="contact-address phone-number">
                                    {% block contact_phone_number -%}
                                        {% set phone_number = '+41 79 213 46 01' %}
                                        {%- if detector.isMobile -%}
                                            <a href="tel:{{ phone_number|url_encode }}">{{ phone_number }}</a>
                                        {%- else -%}
                                            {{ phone_number }}
                                        {%- endif -%}
                                    {%- endblock %}
                                </address>
                            </div>
                            <div class="d-flex" aria-labelledby="contactEmailLabel">
                                <div class="contact-label" id="contactEmailLabel">E-mail</div>
                                <address class="contact-address">
                                    {% block contact_email -%}
                                        <a class="contact-email-link" href="#"><noscript>Activez javascript pour voir l'adresse</noscript></a>
                                    {%- endblock %}
                                </address>
                            </div>
                        </div>
                        {# <div class="col-12 text-center mt-4" aria-label="Réseaux sociaux">
                            <a class="link-dark fs-1" href="https://www.facebook.com/" aria-label="Facebook">
                                {% embed "components/icon.html.twig" with { 'icon': 'facebook', 'title': 'Facebook' } only %}{% endembed  %}
                            </a>
                        </div> #}
                    </div>
                    <hr class="d-md-none" aria-hidden=="true">
                </section>

            </div>
        </div>
    </div>
{% endblock %}

{% block footer_content %}{% endblock %}
